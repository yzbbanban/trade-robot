<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yzb.lingo.controller.MainController">
    <children>
        <TextField fx:id="txtResources" layoutX="15.0" layoutY="330.0" prefHeight="23.0" prefWidth="250.0" disable="true"/>
        <Button layoutX="522.0" layoutY="360.0" mnemonicParsing="false" onAction="#btnUploadMessage_OnClick_Event" text="上传结果" />
        <Button layoutX="15.0" layoutY="360.0" onAction="#btnSelectPath_OnClick_Event" styleClass="fat-button" text="选择文件" />
        <Button layoutX="250.0" layoutY="360.0" onAction="#btnBeginAnalyse_OnClick_Event" styleClass="fat-button" text="开始分析">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
        <AnchorPane layoutX="1.0" layoutY="14.0" prefHeight="318.0" prefWidth="600.0">
            <children>

                <Label layoutX="14.0" layoutY="5.0" text="工序表名称" />
                <TextField fx:id="toTableName" disable="true" layoutX="130.0" layoutY="5.0" />
                <Label layoutX="350.0" layoutY="5.0" text="计算类型" />
                <TextField fx:id="calcType" disable="true" layoutX="420.0" layoutY="5.0" />


                <Label layoutX="14.0" layoutY="30.0" text="使用人力" />
                <TextField fx:id="toPeoCount" disable="true" layoutX="130.0" layoutY="30.0" />
                <Label layoutX="350.0" layoutY="30.0" text="工序数量" />
                <TextField fx:id="toProcedure" disable="true" layoutX="420.0" layoutY="30.0" />

                <Label layoutX="14.0" layoutY="55.0" text="人均负载率" />
                <TextField fx:id="toLoadRate" disable="true" layoutX="130.0" layoutY="55.0" />

                <Label layoutX="14.0" layoutY="80.0" text="放宽前产能(数量/h)" />
                <TextField fx:id="toGoods" disable="true" layoutX="130.0" layoutY="80.0" />
                <Label layoutX="350.0" layoutY="80.0" text="放宽前POH" />
                <TextField fx:id="toPoh" disable="true" layoutX="420.0" layoutY="80.0" />

                <Label layoutX="14.0" layoutY="105.0" text="标准产能" />
                <TextField fx:id="toActualGoods" disable="true" layoutX="130.0" layoutY="105.0" />
                <Label layoutX="350.0" layoutY="105.0" text="标准POH" />
                <TextField fx:id="toActualPoh" disable="true" layoutX="420.0" layoutY="105.0" />

                <Label layoutX="14.0" layoutY="140.0" text="最佳解人力配置" />
                <TableView layoutX="14.0" layoutY="160.0" fx:id="tView" prefHeight="150.0" prefWidth="500.0">
                    <columns>
                        <TableColumn prefWidth="75.0" fx:id="produce" text="工序" />
                        <TableColumn prefWidth="75.0" fx:id="peoCount" text="人数" />
                        <TableColumn prefWidth="75.0" fx:id="cycleTime" text="CT(秒)" />
                        <TableColumn prefWidth="75.0" fx:id="unit" text="配置产能" />
                        <TableColumn prefWidth="75.0" fx:id="loadRate" text="负载率" />
                        <TableColumn prefWidth="130.0" fx:id="goods" text="单人产能(数量/h)" />
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
