<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yzb.lingo.controller.MainController">
    <children>
        <TextField fx:id="txtResources" layoutX="15.0" layoutY="330.0" prefHeight="23.0" prefWidth="250.0" disable="true"/>
        <Button layoutX="522.0" layoutY="360.0" mnemonicParsing="false" onAction="#btnUploadMessage_OnClick_Event" text="上传结果" />
        <Button layoutX="15.0" layoutY="360.0" onAction="#btnSelectPath_OnClick_Event" styleClass="fat-button" text="选择文件" />
        <Button layoutX="250.0" layoutY="360.0" onAction="#btnBeginAnalyse_OnClick_Event" styleClass="fat-button" text="开始分析">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
        <AnchorPane layoutX="1.0" layoutY="14.0" prefHeight="318.0" prefWidth="600.0">
            <children>
                <Label layoutX="14.0" layoutY="13.0" text="工站数" />
                <TextField fx:id="toProcedure" disable="true" layoutX="84.0" layoutY="10.0" />
                <Label layoutX="326.0" layoutY="13.0" text="使用人数" />
                <TextField fx:id="toPeoCount" disable="true" layoutX="390.0" layoutY="10.0" />

                <Label layoutX="14.0" layoutY="37.0" text="POH" />
                <TextField fx:id="toPoh" disable="true" layoutX="84.0" layoutY="35.0" />
                <Label layoutX="326.0" layoutY="37.0" text="实际POH" />
                <TextField fx:id="toActualPoh" disable="true" layoutX="390.0" layoutY="35.0" />

                <Label layoutX="14.0" layoutY="62.0" text="总利用率" />
                <TextField fx:id="toLoadRate" disable="true" layoutX="84.0" layoutY="60.0" />
                <Label layoutX="326.0" layoutY="62.0" text="总产能" />
                <TextField fx:id="toGoods" disable="true" layoutX="390.0" layoutY="60.0" />

                <Label layoutX="14.0" layoutY="97.0" text="工站结果" />
                <TableView layoutX="14.0" layoutY="115.0" fx:id="tView" prefHeight="200.0" prefWidth="450.0">
                    <columns>
                        <TableColumn prefWidth="75.0" fx:id="produce" text="工序" />
                        <TableColumn prefWidth="75.0" fx:id="peoCount" text="人数" />
                        <TableColumn prefWidth="75.0" fx:id="cycleTime" text="个/时间" />
                        <TableColumn prefWidth="75.0" fx:id="goods" text="产量" />
                        <TableColumn prefWidth="75.0" fx:id="loadRate" text="负载率" />
                        <TableColumn prefWidth="75.0" fx:id="unit" text="数量/h" />
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
